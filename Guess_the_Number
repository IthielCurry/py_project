import random

print("Guess the number: fun game")

generate_number = random.uniform(1, 9)

question = int(input("quess a number from 1 to 100:  "))

if question == generate_number:
    print("Congratulations: you guessed right: ")

elif question >= generate_number:
    print("Too high try again. ")
    try_again = int(input("Try again: "))

    while True:
        try_again = int(input("Try again: "))

    if question == generate_number:
        print("Congratulations: you guessed right: ")



elif question <= generate_number:
    print("Too low try again ")
    try_again = int(input("Try again: "))

    while True:
        try_again = int(input("Try again: "))
    if question == generate_number:
        print("Congratulations: you guessed right: ")


else:
    ("Search this error code: err934y7823b")



